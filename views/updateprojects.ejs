<% include partials/header %>
<% include partials/menu %>

<div class="main-wrapper" style="display: flex; justify-content: center;">
    <form action="/projects/update" method="post" style="width:40%;">
        <div class="form-group">
            <label for="name">Project Name:</label>
            <input type="text" class="form-control" id="project" name="project_name" value="<%= project.project_name %>">
        </div>
        <div class="form-group">
          <label for="select-partner">Select Contact:</label>
          <select class="form-control" name="contact_name" id="select-project">
              <% contacts.forEach(contact => { %>
                  <% if(contact.name === current.name) { %>
                    <option selected><%= contact.name %></option>
                  <% } else { %>
                  <option><%= contact.name %></option>
                  <% } %>
              <% }) %>
          </select>
      </div>
        <div class="form-group">
          <label for="email">Number of Students:</label>
          <input type="number" class="form-control" id="num_students" name="num_students" value="<%= project.num_students %>">
        </div>
        <button class="btn btn-primary" type="submit">Update Project</button>
        <a href="/projects/all" class="btn btn-primary">Cancel</button>
      </form>
</div>