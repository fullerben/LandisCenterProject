<% include partials/header %>
<% include partials/menu %>

<div class="main-wrapper" style="display: flex; justify-content: center;">
    <form action="/contacts/update" method="post" style="width:40%;">
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" class="form-control" id="name" name="name" value="<%= contact.name %>">
        </div>
        <div class="form-group">
          <label for="email">Email address (required):</label>
          <input type="email" class="form-control" id="email" name="email" value="<%= contact.email %>">
        </div>
        <div class="form-group">
            <label for="phone">New Phone:</label>
            <input type="text" class="form-control" id="phone" name="phone" value="<%= contact.phone %>">
        </div>
        <div class="form-group">
            <label for="secondaryphone">New Secondary Phone (optional):</label>
            <input type="text" class="form-control" id="secondaryphone" name="secondary_phone" value="<%= contact.secondary_phone %>">
        </div>
        <div class="form-group">
            <label for="extension">New Extension (optional):</label>
            <input type="text" class="form-control" id="extension" name="extension" value="<%= contact.extension %>">
        </div>
        <div class="form-group">
            <label for="department">Department (if faculty member):</label>
            <input type="text" class="form-control" id="department" name="department" value="<%= contact.department %>">
        </div>
        <button class="btn btn-primary" type="submit">Update Contact</button>
      </form>
</div>