<% include partials/header %>
<% include partials/menu %>

<div class="main-wrapper" style="display: flex; justify-content: center;">
    <form action="/volunteerevents/add" method="post" style="width:40%;">
        <div class="form-group">
            <label for="name">Event Name:</label>
            <input type="text" class="form-control" id="name" name="event_name" placeholder="Event name">
        </div>
        <div class="form-group">
            <label for="date">Due Date: (mm/dd/yyyy)</label>
            <input type="text" class="form-control" id="date" name="event_date" placeholder="Due date">
        </div>
        <div class="form-group">
            <label for="content">Description:</label>
            <textarea class="form-control" id="content" name="description" rows="3"></textarea>
        </div>
        <div class="form-group">
            <label for="phone">Number of Volunteers:</label>
            <input type="number" class="form-control" id="phone" name="num_volunteers">
        </div>
        <div class="form-group">
            <label for="select-partner">Event Contact:</label>
            <select class="form-control" name="event_contact_name" id="select-project">
                <option>None</option>
                <% contacts.forEach(contact => { %>
                    <option><%= contact.name %></option>
                <% }) %>
            </select>
        </div>
        <div class="form-group">
            <label for="select-partner">Event Coordinator:</label>
            <select class="form-control" name="event_coordinator_name" id="select-project">
                <option>None</option>
                <% contacts.forEach(contact => { %>
                    <option><%= contact.name %></option>
                <% }) %>
            </select>
        </div>
        <div class="form-group">
            <label for="select-project">Partner Organization:</label>
            <select class="form-control" name="student_org" id="select-project">
                <option>None</option>
                <% organizations.forEach(organization => { %>
                    <option><%= organization.organization_name %></option>
                <% }) %>
            </select>
        </div>
        <button class="btn btn-primary" type="submit">Add Volunteer Event</button>
      </form>
</div>