<% include partials/header %>
<% include partials/menu %>

<div class="main-wrapper">
    <div class="card-wrapper">
        <div class="card">
            <div class="card-header">
                <%= organization.organization_name %>
            </div>
            <div class="card-body">
                <h5 class="card-title"><%= organization.type %> Organization <%= organization.organization_name %></h5>
                <p class="card-text">Contacts:</p>

                <div class="card-deck">
                    <% contacts.forEach(contact => { %>
                        <div class="card">
                            <div class="card-body">
                            <h5 class="card-title"><%= contact.name %></h5>
                            <p class="card-text">Name: <%= contact.name %></p>
                            <p class="card-text">Email: <%= contact.email %></p>
                            <a href="/contacts/view/<%= contact.id %>" class="card-link">View Full Contact</a>
                            </div>
                        </div>
                    <% }) %>
                </div>

            </div>
        </div>
    </div>
</div>