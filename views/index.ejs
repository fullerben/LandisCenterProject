<% include partials/header %>
<% include partials/menu %>
<div class="main-wrapper">
    <div class="header-1">
        View Contacts
    </div>
    <div class="search-form">
      <form class="form-inline">
        <i class="fas fa-search" aria-hidden="true"></i>
        <input class="form-control form-control-sm ml-3 w-75" type="text" placeholder="Search by organization" aria-label="Search">
      </form>
    </div>
    <div class="card-wrapper">
        <% contacts.forEach(contact => { %>
        <div class="card">
            <div class="card-header">
                Contact for <%= contact.name %>
            </div>
            <div class="card-body">
              <h5 class="card-title"><%= contact.name %></h5>
              <p class="card-text">Email: <%= contact.email %></p>
              <% if(contact.phone !== null) { %>
                <p class="card-text">Phone: <%= contact.phone %> <%= contact.extension %></p>
              <% } %>
              <% if(contact.secondary_phone !== null) { %>
                <p class="card-text">Secondary Phone: <%= contact.secondary_phone %></p>
              <% } %>
              <p class="card-text">Organization: <%= contact.organization_name %></p>
              <a href="#" class="btn btn-primary">Go to Organization</a>
            </div>
          </div>
        <% }) %>
    </div>
</div>
</body>
</html>